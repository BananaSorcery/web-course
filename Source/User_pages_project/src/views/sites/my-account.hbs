<body>
    <!-- ...:::: Start Breadcrumb Section:::... -->
    <div class="breadcrumb-section">
        <div class="breadcrumb-wrapper">
            <div class="container">
                <div class="row">
                    <div
                        class="col-12 d-flex justify-content-between justify-content-md-between  align-items-center flex-md-row flex-column">
                        <h3 class="breadcrumb-title">My Account</h3>
                        <div class="breadcrumb-nav">
                            <nav aria-label="breadcrumb">
                                <ul>
                                    <li><a href="/">Home</a></li>
                                    <li class="active" aria-current="page">My Account</li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- ...:::: End Breadcrumb Section:::... -->

    <!-- ...:::: Start Account Dashboard Section:::... -->
    <div class="account_dashboard">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-3 col-lg-3">
                    <!-- Nav tabs -->
                    <div class="dashboard_tab_button">
                        <ul role="tablist" class="nav flex-column dashboard-list">
                            <li><a href="#account-details" data-toggle="tab" class="nav-link active">Account details</a>
                            </li>
                            <li> <a href="#orders" data-toggle="tab" class="nav-link">Orders</a></li>
                            <li><a href="#edit-profile" data-toggle="tab" class="nav-link">Edit profiles</a></li>
                            <li><a href="/auth/password-reset" class="nav-link">Reset password</a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-sm-12 col-md-9 col-lg-9">
                    <!-- Tab panes -->
                    <div class="tab-content dashboard_content">
                        <div class="tab-pane show active" id="account-details">
                            <div class="d-flex mb-10 justify-content-center align-items-center">
                                <img src="{{userInfo.avatar_url}}" alt="Guest" width="70" class="rounded-circle mr-2">
                                <div>
                                    <h5>{{userInfo.full_name}}</h5>
                                    <p>{{userInfo.username}}</p>
                                </div>
                            </div>
                            <div class="d-flex flex-wrap justify-content-between">
                                <div class="default-form-box mb-20 col-md-3">
                                    <label>Full name</label>
                                    {{userInfo.full_name}}
                                </div>
                                <div class="default-form-box mb-20 col-md-3">
                                    <label>Gender</label>
                                    Male
                                </div>
                                <div class="default-form-box mb-20 col-md-3">
                                    <label>Birthdate</label>
                                    15/04/1452
                                </div>
                            </div>
                            <div class="d-flex flex-wrap justify-content-between">
                                <div class="default-form-box mb-20 col-md-3">
                                    <label>Phone</label>
                                    {{userInfo.phone_number}}
                                </div>
                                <div class="default-form-box mb-20 col-md-3">
                                    <label>Email address</label>
                                    {{userInfo.email}}
                                </div>
                                <div class="default-form-box mb-20 col-md-3">
                                    <label>Street address</label>
                                    {{userInfo.address}}
                                </div>
                            </div>
                            <p class="font-italic">Your addresses will be used on the checkout page by default.</p>
                        </div>

                        <div class="tab-pane fade" id="orders">
                            <h4>Orders</h4>
                            <div class="table_page table-responsive">
                                <table>
                                    <thead>
                                        <tr>
                                            <th>Order</th>
                                            <th>Date</th>
                                            <th>Status</th>
                                            <th>Total</th>
                                            <th>Details</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#if orders}}
                                        {{#each orders}}
                                        <tr>
                                            <td>#{{order_id}}</td>
                                            <td>{{order_date}}</td>
                                            {{!-- <td><span class="success">{{delivery_status}}</span></td> --}}
                                            <td>
                                                <div>{{delivery_status}}</div>
                                            </td>
                                            <td>{{final_cost}}</td>
                                            <td><a href="#" data-toggle="modal" data-target="#modalViewOrder"
                                                    class="view">view</a></td>
                                        </tr>
                                        {{/each}}
                                        {{/if}}
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        <div class="tab-pane fade" id="edit-profile">
                            <h3>Profile editor</h3>
                            <div class="login">
                                <div class="login_form_container">
                                    <div class="account_login_form">
                                        <form method="POST" action="/my-account/profile-update"
                                            enctype="multipart/form-data">
                                            <div class=" d-flex mt-5 mb-10 justify-content-center align-items-center">
                                                <img src="{{userInfo.avatar_url}}" alt="{{userInfo.username}}"
                                                    width="80" class="rounded-circle mr-4" id="avatar">
                                                <div class="default-form-box d-flex flex-column">
                                                    <h5 class="mb-1">{{userInfo.full_name}}
                                                        <span>
                                                            ({{userInfo.username}})</span>
                                                    </h5>
                                                    <input class="form-control form-control-sm" id="formFileSm"
                                                        type="file" name="avatar" />
                                                </div>
                                            </div>
                                            <div class="d-flex justify-content-between">
                                                <div class="default-form-box col-lg-12 mb-20">
                                                    <label>Full name <span>*</span></label>
                                                    <input type="text" value="{{userInfo.full_name}}" name="full_name">
                                                </div>
                                            </div>
                                            <div class="d-flex justify-content-between">
                                                <div class="default-form-box mb-20">
                                                    <label>Gender</label>
                                                    <div class="input-radio p-2">
                                                        <span class="custom-radio"><input type="radio" value="Male"
                                                                name="gender">Male</span>
                                                        <span class="custom-radio"><input type="radio" value="Female"
                                                                name="gender">Female</span>
                                                        <span class="custom-radio"><input type="radio" value="Other"
                                                                name="gender">Other</span>
                                                    </div>
                                                </div>
                                                <div class="default-form-box mb-20 col-7">
                                                    <div class="d-flex">
                                                        <label>Birthdate</label>
                                                        <span class="example ml-2">(E.g.: 05/31/1970)</span>
                                                    </div>
                                                    <input type="date" name="birthday">
                                                </div>
                                            </div>
                                            <div class="d-flex justify-content-between">
                                                <div class="default-form-box col-lg-6 mb-20">
                                                    <label>Email address <span>*</span></label>
                                                    <input type="text" value="{{userInfo.email}}" name="email">
                                                </div>
                                                <div class="default-form-box col-lg-5 mb-20">
                                                    <label>Phone<span>*</span></label>
                                                    <input type="text" value="{{userInfo.phone_number}}"
                                                        name="phone_number">
                                                </div>
                                            </div>
                                            <div class="default-form-box col-12 mb-20">
                                                <label>Delivery address <span>*</span></label>
                                                <input type="text" value="{{userInfo.address}}" name="address">
                                            </div>
                                            <div
                                                class="save_button primary_btn default_button d-flex justify-content-center">
                                                <button type="submit">Save</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- ...:::: End Account Dashboard Section:::... -->
</body>
<script type="text/javascript" src="/js/custom_js/avatar-edit.js"></script>