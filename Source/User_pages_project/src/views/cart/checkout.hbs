<body>
    <!-- ...:::: Start Breadcrumb Section:::... -->
    <div class="breadcrumb-section">
        <div class="breadcrumb-wrapper">
            <div class="container">
                <div class="row">
                    <div
                        class="col-12 d-flex justify-content-between justify-content-md-between  align-items-center flex-md-row flex-column">
                        <h3 class="breadcrumb-title">Checkout</h3>
                        <div class="breadcrumb-nav">
                            <nav aria-label="breadcrumb">
                                <ul>
                                    <li><a href="/">Home</a></li>
                                    <li><a href="/cart">Cart</a></li>
                                    <li class="active" aria-current="page">Checkout</li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- ...:::: End Breadcrumb Section:::... -->

    <!-- ...:::: Start Checkout Section:::... -->
    <div class="checkout_section">
        <div class="container">
            <div class="row">
                <!-- User Quick Action Form -->
                <div class="col-12">
                    <div class="user-actions accordion">
                        <h3>
                            <i class="fa fa-file-o" aria-hidden="true"></i>
                            Unable to proceed?
                            <a href="/auth/login">Click here to login!</a>
                        </h3>
                        <div id="checkout_login" class="collapse" data-parent="#checkout_login"></div>
                    </div>
                    <div class="user-actions accordion">
                        <div id="checkout_coupon" class="collapse" data-parent="#checkout_coupon">
                            <div class="checkout_info">
                                <form action="#">
                                    <input placeholder="Coupon code" type="text">
                                    <button type="submit">Apply coupon</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- User Quick Action Form -->
            </div>
            <!-- Start User Details Checkout Form -->
            <div class="checkout_form">
                <form action="/cart/checkout" method="POST">
                    <div class="row d-flex justify-content-between">
                        <div class="col-lg-6 col-md-6">
                            <h3>Your order</h3>
                            <div class="order_table table-responsive">
                                <table>
                                    <thead>
                                        <tr>
                                            <th class="col-9">Product</th>
                                            <th class="col-3">Total</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        {{#each books}}
                                        <tr>
                                            <td>{{[book.title]}}<strong class="text-danger"> ×
                                                    {{book_quantity}}</strong></td>
                                            <td class="text-right">{{total_cost}} đ</td>
                                        </tr>
                                        {{/each}}
                                    </tbody>
                                    <tfoot>
                                        <tr>
                                            <th class="text-right">Cart Subtotal</th>
                                            <td class="text-right text-danger"><strong>{{fee.subTotal}} Đ</strong>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th class="text-right">Shipping</th>
                                            <td class="text-right text-danger"><strong>{{fee.shipping}} Đ</strong>
                                            </td>
                                        </tr>
                                        <tr class="order_total">
                                            <th class="text-right">Order Total</th>
                                            <td class="text-right text-danger"><strong>{{fee.total}} Đ</strong></td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                        <div class="col-lg-5 col-md-5">
                            <h3>Delivery address</h3>
                            <div class="row">
                                <div class="col-12 mb-20">
                                    <div class="default-form-box">
                                        <label>Receiver name <span>*</span></label>
                                        <input type="text" name="receiver" placeholder="Ex: Nguyen Van Long ..."
                                            required>
                                    </div>
                                </div>
                                <div class="col-lg-6 mb-20">
                                    <div class="default-form-box">
                                        <label>Phone number<span>*</span></label>
                                        <input type="text" name="phone" placeholder="Ex: 0935xxx..." required>
                                    </div>
                                </div>
                                <div class="col-lg-6 mb-20">
                                    <div class="default-form-box">
                                        <label> Email Address <span>*</span></label>
                                        <input type="email" name="email" placeholder="Ex: nnk@gmail.com..." required>
                                    </div>
                                </div>
                                <div class="col-12 mb-20">
                                    <div class="default-form-box">
                                        <label>Street address <span>*</span></label>
                                        <input type="text" name="street"
                                            placeholder="Ex: House number / street name / ..." required>
                                    </div>
                                </div>
                                <div class="col-12 mb-20">
                                    <div class="default-form-box">
                                        <label>Town / City <span>*</span></label>
                                        <input type="text" name="city" placeholder="Ex: Ward / District / ..." required>
                                    </div>
                                </div>
                                <div class="payment_method">
                                    <div class="default-form-box mb-20">
                                        <div class="input-radio p-2 d-flex justify-content-around">
                                            <span class="custom-radio">
                                                <input type="radio" value="COD" name="payment" checked="checked">
                                                Cash on delivery - COD
                                            </span>
                                            <span class="custom-radio">
                                                <input type="radio" value="Credit" name="payment">
                                                Credit / debit card
                                            </span>
                                            <span class="custom-radio">
                                                <input type="radio" value="Paypal" name="payment">
                                                Paypal
                                            </span>
                                        </div>
                                    </div>

                                    <div class="order_button pt-15 d-flex justify-content-center">
                                        <button type="submit">Proceed</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</body>