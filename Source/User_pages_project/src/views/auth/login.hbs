<body>
    <!-- ...:::: Start Breadcrumb Section:::... -->
    <div class="breadcrumb-section">
        <div class="breadcrumb-wrapper">
            <div class="container">
                <div class="row">
                    <div
                        class="col-12 d-flex justify-content-between justify-content-md-between  align-items-center flex-md-row flex-column">
                        <h3 class="breadcrumb-title">Login</h3>
                        <div class="breadcrumb-nav">
                            <nav aria-label="breadcrumb">
                                <ul>
                                    <li><a href="/">Home</a></li>
                                    <li><a href="#">Auth</a></li>
                                    <li class="active" aria-current="page">Login</li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- ...:::: End Breadcrumb Section:::... -->

    <!-- ...:::: Start Customer Login Section :::... -->
    <div class="customer_login">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <!--login area start-->
                <div class="col-lg-6 col-md-6">
                    <div class="account_form">
                        <h3>login</h3>
                        {{#if err}}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong class="ml-3">Error: </strong>{{err}}
                        </div>
                        {{/if}}
                        <form method="POST" action="/auth/login">
                            <div class="default-form-box mb-20">
                                <label>Username <span>*</span></label>
                                <input type="text" name="username">
                            </div>
                            <div class="default-form-box mb-20">
                                <label>Password <span>*</span></label>
                                <input type="password" name="password">
                            </div>
                            <div class="login_submit">
                                <div class="d-flex justify-content-between">
                                    <label class="checkbox-default mb-20" for="offer">
                                        <input type="checkbox" id="offer">
                                        <span>Remember me</span>
                                    </label>
                                    <a href="/auth/password-recovery-request">Lost your password?</a>
                                </div>
                                <div class="login_submit d-flex flex-column align-items-center">
                                    <button type="submit">LOGIN</button>
                                    <a href="/auth/signup" class="mt-3">Don't have an account yet? Sign up!</a>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <!--login area start-->
            </div>
        </div>
    </div> <!-- ...:::: End Customer Login Section :::... -->
</body>