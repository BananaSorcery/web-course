<body>
    <!-- ...:::: Start Breadcrumb Section:::... -->
    <div class="breadcrumb-section">
        <div class="breadcrumb-wrapper">
            <div class="container">
                <div class="row">
                    <div
                        class="col-12 d-flex justify-content-between justify-content-md-between  align-items-center flex-md-row flex-column">
                        <h3 class="breadcrumb-title">Sign up</h3>
                        <div class="breadcrumb-nav">
                            <nav aria-label="breadcrumb">
                                <ul>
                                    <li><a href="/">Home</a></li>
                                    <li><a href="/auth/login">Auth</a></li>
                                    <li class="active" aria-current="page">Sign up</li>
                                </ul>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div> <!-- ...:::: End Breadcrumb Section:::... -->

    <!-- ...:::: Start Customer Login Section :::... -->
    <div class="customer_login">
        <div class="container">
            <div class="row d-flex justify-content-center">
                <!--register area start-->
                <div class="col-lg-8 col-md-8">
                    <div class="account_form register">
                        <h3>Register</h3>
                        {{#if err}}
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong class="ml-3">Error: </strong>{{err}}
                        </div>
                        {{/if}}
                        <form method="POST" action="/auth/create-account">
                            <div class="d-flex justify-content-between">
                                <div class="default-form-box col-lg-6 mb-20 form form-group">
                                    <label>First Name <span>*</span></label>
                                    <input type="text" id="firstname" name="firstname" required>
                                </div>
                                <div class="default-form-box col-lg-5 mb-20">
                                    <label>Last Name <span>*</span></label>
                                    <input type="text" id="lastname" name="lastname" required>
                                </div>
                            </div>
                            <div class="d-flex justify-content-between">
                                <div class="default-form-box mb-20">
                                    <label>Gender</label>
                                    <div class="input-radio p-2">
                                        <span class="custom-radio"><input type="radio" value="1" name="id_gender"
                                                checked="checked">Male</span>
                                        <span class="custom-radio"><input type="radio" value="1"
                                                name="id_gender">Female</span>
                                        <span class="custom-radio"><input type="radio" value="1"
                                                name="id_gender">Other</span>
                                    </div>
                                </div>
                                <div class="default-form-box mb-20 col-7">
                                    <div class="d-flex">
                                        <label>Birthdate</label>
                                        <span class="example ml-2">(E.g.: 05/31/1970)</span>
                                    </div>
                                    <input type="date" name="birthday">
                                </div>
                            </div>
                            <div class="default-form-box mb-20">
                                <label>Email address <span>*</span></label>
                                <input type="email" id="email" name="email" required>
                            </div>
                            <div class="default-form-box mb-20">
                                <label>Username <span>*</span></label>
                                <input type="text" id="username" name="username" required>
                            </div>
                            <div class="default-form-box mb-20">
                                <label>Passwords <span>*</span></label>
                                <input type="password" id="password" name="password" required>
                            </div>
                            <div class="default-form-box mb-20">
                                <label>Repeat passwords <span>*</span></label>
                                <input type="password" id="password_rep" name="password_rep" required>
                            </div>
                            <div class="default-form-box mb-20">
                                <label>Address<span>*</span></label>
                                <div class="d-flex justify-content-between">
                                    <input placeholder="House number and street name" type="text" id="address"
                                        name="address" required>
                                </div>
                            </div>
                            <div class="default-form-box col-lg-12 mb-20">
                                <label>Phone Number<span>*</span></label>
                                <input type="text" id="phone_number" name="phone_number" required>
                            </div>
                            <div class="login_submit d-flex flex-column align-items-center">
                                <button type="submit">Register</button>
                                <a href="/auth/login" class="mt-3">Already have an account? Login!</a>
                            </div>
                        </form>
                    </div>
                </div>
                <!--register area end-->
            </div>
        </div>
    </div> <!-- ...:::: End Customer Login Section :::... -->
</body>