<!-- ...:::: Start Header Section:::... -->
<header class="header-section d-lg-block d-none">
    <!-- Start Header Center Area -->
    <div class="header-center">
        <div class="container">
            <div class="row d-flex justify-content-between align-items-center">
                <div class="col-3">
                    <!-- Logo Header -->
                    <div class="header-logo">
                        <a href="/"><img src="/images/logo/logo.png" alt="" width="180"></a>
                    </div>
                </div>
                <div class="col-5">
                    <!-- Start Header Search -->
                    <div class="header-search">
                        <form action="/products-list/product-searched" method="GET">
                            <div class="header-search-box default-search-style d-flex">
                                <input class="default-search-style-input-box border-around border-right-none"
                                    type="search" placeholder="Search entire store here ..." name="search"
                                    value="{{search}}" required>
                                <button class="default-search-style-input-btn" type="submit">
                                    <i class="icon-search"></i>
                                </button>
                            </div>
                        </form>
                    </div> <!-- End Header Search -->
                </div>
                <div class="col-4 text-right d-flex justify-content-end">
                    <!-- Start Header Action Icon -->
                    {{#if user}}
                    <a href="/my-account" class="mr-5">
                        <img src="{{user.avatar_url}}" alt="Guest" width="45" class="rounded-circle mr-2">
                        {{user.full_name}}
                    </a>
                    {{/if}}
                    <ul class="header-action-icon">
                        <li>
                            <a href="/cart">
                                <i class="icon-shopping-cart" width="45"></i>
                                <span class="header-action-icon-item-count">
                                    {{#if user.cart_count}}
                                    {{user.cart_count}}
                                    {{else}}
                                    {{#if cart_count}}
                                    {{cart_count}}
                                    {{else}}
                                    0
                                    {{/if}}
                                    {{/if}}
                                </span>
                            </a>
                        </li>
                    </ul> <!-- End Header Action Icon -->
                </div>
            </div>
        </div>
    </div> <!-- End Header Center Area -->

    <!-- Start Bottom Area -->
    <div class="header-bottom sticky-header">
        <div class="container">
            <div class="row">
                <div class="col-12">
                    <!-- Header Main Menu -->
                    <div class="main-menu d-flex justify-content-between">
                        <nav>
                            <ul>
                                <li>
                                    <a class="active main-menu-link" href="/">Home</a>
                                </li>
                                <li class="has-dropdown has-megaitem">
                                    <a href="/products-list">Categories <i class="fa fa-angle-down"></i></a>
                                    <!-- Mega Menu -->
                                    <div class="mega-menu">
                                        <ul class="mega-menu-inner">
                                            <li class="mega-menu-item">
                                                <ul class="mega-menu-sub">
                                                    <li><a href="/products-list/category?category=English learning">English
                                                            learning</a>
                                                    </li>
                                                    <li><a
                                                            href="/products-list/category?category=Self-help">Self-help</a>
                                                    </li>
                                                    <li><a href="/products-list/category?category=Business">Business</a>
                                                    </li>
                                                    <li><a href="/products-list/category?category=Short stories">Short
                                                            stories</a>
                                                    </li>
                                                    <li><a href="/products-list/category?category=Long story">Long
                                                            story</a>
                                                    </li>
                                                    <li><a
                                                            href="/products-list/category?category=Information Technology">Information
                                                            Technology</a>
                                                    </li>
                                                    <li><a href="/products-list/category?category=Manga">Manga
                                                            story</a>
                                                    </li>
                                                </ul>
                                            </li>
                                        </ul>
                                    </div>
                                </li>
                                <!-- <li><a href="/ad-search">Advanced search</a></li> -->
                                <li><a href="/about-us">About Us</a></li>
                            </ul>
                        </nav>
                        <nav class="d-flex">
                            <ul>
                                {{#if user}}
                                <li><a href="/auth/logout">Log out</a></li>
                                {{else}}
                                <li><a href="/auth/signup">Sign up</a></li>
                                <li><a href="/auth/login">Log in</a></li>
                                {{/if}}
                            </ul>
                        </nav>
                    </div> <!-- Header Main Menu Start -->
                </div>
            </div>
        </div>
    </div> <!-- End Bottom Area -->
</header> <!-- ...:::: End Header Section:::... -->

