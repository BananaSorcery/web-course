<body data-sidebar="dark">
    <!-- Begin page -->

    <div id="layout-wrapper">
        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="main-content">
            <div class="page-content">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-12 d-flex flex-wrap">
                            <div class="col-sm-12 col-xl-3">
                                <div class="card">
                                    <div class="d-flex justify-content-center mt-4">
                                        <img class="rounded-circle" src="{{userInfo.avatar_url}}" alt="Card image cap"
                                            width="100px">
                                    </div>
                                    <div class="card-body d-flex flex-column align-items-center mb-0">
                                        <h3 class="card-title mt-0">{{userInfo.full_name}}</h3>
                                        <a href="#">{{userInfo.email}}</a>
                                        <p>(+84) {{userInfo.phone_number}}</p>
                                        <div class="d-flex justify-content-around">
                                            <button class="btn btn-primary"><i
                                                    class="mdi mdi-18px mdi-facebook"></i></button>
                                            <button class="btn btn-info ml-2"><i
                                                    class="mdi mdi-18px mdi-twitter"></i></button>
                                            <button class="btn btn-danger ml-2"><i
                                                    class="mdi mdi-18px mdi-google"></i></button>
                                        </div>
                                    </div>
                                    <ul class="list-group list-group-flush">
                                        <li class="list-group-item d-flex justify-content-around">
                                            <span class="text-center">
                                                <h6 class="font-size-14">Username</h6>
                                                {{userInfo.username}}
                                            </span>
                                            <span class="text-center">
                                                <h6 class="font-size-14">Role</h6>
                                                Administrator
                                            </span>
                                        </li>
                                        <li class="list-group-item text-center">
                                            <h6 class="font-size-14">Contact address</h6>
                                            <span>{{userInfo.address}}</span>
                                        </li>
                                    </ul>
                                </div>
                            </div>

                            <div class="col-sm-12 col-xl-9">
                                <div class="row card">
                                    <div class="card-body">
                                        <div id="addproduct-nav-pills-wizard" class="twitter-bs-wizard">
                                            <ul class="twitter-bs-wizard-nav">
                                                <li class="nav-item">
                                                    <a href="#basic-info" class="nav-link" data-toggle="tab">
                                                        <span class="step-number">01</span>
                                                        <span class="step-title">Account</span>
                                                    </a>
                                                </li>
                                                <li class="nav-item">
                                                    <a href="#product-img" class="nav-link" data-toggle="tab">
                                                        <span class="step-number">02</span>
                                                        <span class="step-title">Profile</span>
                                                    </a>
                                                </li>
                                            </ul>
                                            <div class="tab-content twitter-bs-wizard-tab-content">
                                                <div class="tab-pane" id="basic-info">
                                                    <form class="form-group row ml-3 mr-3 mt-3" method="POST"
                                                        action="admin/admin-profile?edit=account">
                                                        <label for="example-text-input"
                                                            class="col-md-3 col-form-label">Username</label>
                                                        <div class="col-md-9 mb-2">
                                                            <input class="form-control" type="text"
                                                                value="{{userInfo.username}}" id="example-text-input">
                                                        </div>
                                                        <label for="example-password-input"
                                                            class="col-md-3 col-form-label">Current
                                                            password</label>
                                                        <div class="col-md-9 mb-2">
                                                            <input class="form-control" type="password"
                                                                placeholder="Type your current password..."
                                                                id="example-password-input">
                                                        </div>
                                                        <label for="example-password-input"
                                                            class="col-md-3 col-form-label">New
                                                            password</label>
                                                        <div class="col-md-9 mb-2">
                                                            <input class="form-control" type="password"
                                                                placeholder="Type your new password..."
                                                                id="example-password-input">
                                                        </div>
                                                        <label for="example-password-input"
                                                            class="col-md-3 col-form-label">Repeat
                                                            new password</label>
                                                        <div class="col-md-9">
                                                            <input class="form-control" type="password"
                                                                placeholder="Type your new password again..."
                                                                id="example-password-input">
                                                        </div>

                                                        <div class="d-flex flex-column align-items-center col-12 mt-4">
                                                            <p class="text-danger text-right">Warning: Update your
                                                                account will forced you log out! </p>
                                                            <button class="btn btn-primary">Update account</button>
                                                        </div>
                                                    </form>
                                                </div>
                                                <div class="tab-pane" id="product-img">
                                                    <form class="form-group row ml-3 mr-3 mt-3" method="POST"
                                                        action="/admin/update-profile" enctype="multipart/form-data">
                                                        <label class="col-md-2 col-form-label">Avatar:
                                                        </label>
                                                        <div class="col-md-10 mb-3">
                                                            <div class="custom-file">
                                                                <input type="file" class="custom-file-input"
                                                                    id="customFile" name="avatar">
                                                                <label id="customFile-label" class="custom-file-label"
                                                                    for="customFile">Choose
                                                                    your new avatar...</label>
                                                            </div>
                                                        </div>

                                                        <label for="f-name-input" class="col-md-2 col-form-label">Full
                                                            name: </label>
                                                        <div class="col-md-10 mb-3">
                                                            <input class="form-control" type="text"
                                                                value="{{userInfo.full_name}}" id="full-name-input"
                                                                name="full_name">
                                                        </div>

                                                        <label for="address-input"
                                                            class="col-md-2 col-form-label">Address:
                                                        </label>
                                                        <div class="col-md-10 mb-3">
                                                            <input class="form-control" type="text"
                                                                value="{{userInfo.address}}" id="address-input"
                                                                name="address">
                                                        </div>

                                                        <label for="phone-input" class="col-md-2 col-form-label">Phone
                                                            number: </label>
                                                        <div class="col-md-4 mb-3">
                                                            <input class="form-control" type="tel"
                                                                value="{{userInfo.phone_number}}" id="phone-input"
                                                                name="phone_number">
                                                        </div>

                                                        <label for="email-input" class="col-md-1 col-form-label">
                                                            Email: </label>
                                                        <div class="col-md-5 mb-3">
                                                            <input class="form-control" type="email"
                                                                value="{{userInfo.email}}" id="email-input"
                                                                name="email">
                                                        </div>
                                                        {{!--
                                                        <label for="example-date-input"
                                                            class="col-md-2 col-form-label">Birth-date:
                                                        </label>
                                                        <div class="col-md-10">
                                                            <input class="form-control" type="date" value="2020-03-19"
                                                                id="example-date-input">
                                                        </div> --}}
                                                        <div class="d-flex justify-content-center col-12 mt-4">
                                                            <button class="btn btn-primary">Save changes</button>
                                                        </div>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- End Page-content -->

            <footer class="footer">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-sm-6">
                            <script>document.write(new Date().getFullYear())</script> © Nazox.
                        </div>
                        <div class="col-sm-6">
                            <div class="text-sm-right d-none d-sm-block">
                                Crafted with <i class="mdi mdi-heart text-danger"></i> by Themesdesign
                            </div>
                        </div>
                    </div>
                </div>
            </footer>
        </div>
        <!-- end main content-->

    </div>
    <!-- END layout-wrapper -->
</body>
<script type="text/javascript" src="/js/custom_js/avatar-edit.js"></script>