        <div class="main-content">

            <div class="page-content">
                <div class="container-fluid">

                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box d-flex align-items-center justify-content-between">
                                <h4 class="mb-0">Add new admin account</h4>

                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="javascript: void(0);">Ecommerce</a></li>
                                        <li class="breadcrumb-item active">Add new admin account</li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end page title -->

                    <div class="row d-flex justify-content-center">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-header bg-primary ">
                                    <div class="text-white d-flex justify-content-center">
                                        <h2 class="text-white">Basic info</h2>
                                    </div>
                                </div>
                                <div class="card-body">
                                    <div class="tab-content twitter-bs-wizard-tab-content">
                                        <form method="POST" action="/admin/add-account"
                                            enctype="application/x-www-form-urlencoded">
                                            <div class="tab-pane" id="basic-info">
                                                <h4 class="card-title">Basic Information</h4>
                                                <p class="card-title-desc text-danger">Please fill all information
                                                    below</p>

                                                <div class="row">
                                                    <div class="col-2">
                                                        <div class="form-group">
                                                            <label for="firstname">First name<span
                                                                    class="text-danger">*</span></label>
                                                            <input id="firstname" name="firstname" type="text"
                                                                class="form-control" placeholder="Josh" required>
                                                        </div>
                                                    </div>
                                                    <div class="col-2">
                                                        <div class="form-group">
                                                            <label for="lastname">Last Name <span
                                                                    class="text-danger">*</span></label>
                                                            <input id="lastname" name="lastname" type="text"
                                                                class="form-control" placeholder="Mayhem" required>
                                                        </div>
                                                    </div>
                                                    <div class="col-4">
                                                        <div class="form-group">
                                                            <label for="Email">Email <span
                                                                    class="text-danger">*</span></label>
                                                            <input id="email" name="email" type="email"
                                                                class="form-control" placeholder="joshmayhem@mail.com"
                                                                required>
                                                        </div>
                                                    </div>
                                                    <div class="col-4">
                                                        <div class="form-group">
                                                            <label for="phone">Phone Number <span
                                                                    class="text-danger">*</span></label>
                                                            <input id="phone" name="phone" type="text"
                                                                class="form-control" placeholder="(+84) ..." required>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row">
                                                <div class="col-4">
                                                    <div class="form-group">
                                                        <label for="username">Username <span
                                                                class="text-danger">*</span></label>
                                                        <input id="username" name="username" type="text"
                                                            class="form-control" placeholder="joshmayhem" required>
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <div class="form-group">
                                                        <label for="password">Password <span
                                                                class="text-danger">*</span></label>
                                                        <input id="password" name="password" type="password"
                                                            class="form-control" placeholder="***" required>
                                                    </div>
                                                </div>
                                                <div class="col-4">
                                                    <div class="form-group">
                                                        <label for="password">Repeat password <span
                                                                class="text-danger">*</span></label>
                                                        <input id="password" name="password_rep" type="password"
                                                            class="form-control" placeholder="***" required>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="d-flex justify-content-center mt-5">
                                                <button type="submit"
                                                    class="btn btn-primary mr-2 waves-effect waves-light">
                                                    Add Account</button>

                                                <a class="btn btn-secondary waves-effect"
                                                    href="/admin/admins-list">Cancel</a>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
