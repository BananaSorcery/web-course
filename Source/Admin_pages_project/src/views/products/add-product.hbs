<body data-sidebar="dark">
    <!-- Begin page -->
    <div id="layout-wrapper">

        <!-- ============================================================== -->
        <!-- Start right Content here -->
        <!-- ============================================================== -->
        <div class="main-content">

            <div class="page-content">
                <div class="container-fluid">

                    <!-- start page title -->
                    <div class="row">
                        <div class="col-12">
                            <div class="page-title-box d-flex align-items-center justify-content-between">
                                <h4 class="mb-0">Add new product</h4>

                                <div class="page-title-right">
                                    <ol class="breadcrumb m-0">
                                        <li class="breadcrumb-item"><a href="javascript: void(0);">Ecommerce</a></li>
                                        <li class="breadcrumb-item active">Add new product</li>
                                    </ol>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- end page title -->

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="card">
                                <div class="card-body">

                                    <div id="addproduct-nav-pills-wizard" class="twitter-bs-wizard">
                                        <ul class="twitter-bs-wizard-nav">
                                            <li class="nav-item">
                                                <a href="#basic-info" class="nav-link" data-toggle="tab">
                                                    <span class="step-number">01</span>
                                                    <span class="step-title">Basic Info</span>
                                                </a>
                                            </li>
                                            <li class="nav-item">
                                                <a href="#product-img" class="nav-link" data-toggle="tab">
                                                    <span class="step-number">02</span>
                                                    <span class="step-title">Product Images</span>
                                                </a>
                                            </li>
                                        </ul>
                                        <div class="tab-content twitter-bs-wizard-tab-content">
                                            <form method="POST" action="/products/products-add/new-product"
                                                enctype="multipart/form-data">
                                                <div class="tab-pane" id="basic-info">
                                                    <h4 class="card-title">Basic Information</h4>
                                                    <p class="card-title-desc text-danger">Please fill all information
                                                        below</p>

                                                    <div class="row">
                                                        <div class="col-lg-5">
                                                            <div class="form-group">
                                                                <label for="title">Book title <span
                                                                        class="text-danger">*</span></label>
                                                                <input id="title" name="title" type="text"
                                                                    class="form-control" placeholder="Quán gò đi lên"
                                                                    required>
                                                                <div id="titleValidation"></div>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-4">
                                                            <div class="form-group">
                                                                <label for="author">Author <span
                                                                        class="text-danger">*</span></label>
                                                                <input id="author" name="author" type="text"
                                                                    class="form-control" placeholder="Nguyễn Nhật Ánh"
                                                                    required>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <div class="form-group">
                                                                <label for="publisher">Publisher <span
                                                                        class="text-danger">*</span></label>
                                                                <input id="publisher" name="publisher" type="text"
                                                                    class="form-control" placeholder="NXB Tuổi Trẻ"
                                                                    required>
                                                            </div>
                                                        </div>
                                                    </div>

                                                    <div class="row">
                                                        <div class="col-lg-3">
                                                            <div class="form-group">
                                                                <label for="isbn">ISBN <span
                                                                        class="text-danger">*</span></label>
                                                                <input id="isbn" name="isbn" type="text"
                                                                    class="form-control"
                                                                    placeholder="978-3-16-148410-..." required>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <div class="form-group">
                                                                <label for="release-year">Release year <span
                                                                        class="text-danger">*</span></label>
                                                                <input id="release-year" name="release_year"
                                                                    type="number" class="form-control" min="1500"
                                                                    max="2099" placeholder="2010" required>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <div class="form-group">
                                                                <label for="sale-price">Promotion price <span
                                                                        class="text-danger">*</span></label>
                                                                <input id="sale-price" name="sale_price" type="number"
                                                                    min="1000" placeholder="300.000đ"
                                                                    class="form-control" required>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <div class="form-group">
                                                                <label for="quantity">Quantity <span
                                                                        class="text-danger">*</span></label>
                                                                <input id="quantity" name="quantity" type="number"
                                                                    class="form-control" placeholder="10" min="10"
                                                                    max="100" required>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-lg-3">
                                                            <div class="form-group">
                                                                <label class="control-label">Category 01 <span
                                                                        class="text-danger">*</span></label>
                                                                <select class="form-control select2" name="category_01"
                                                                    required>
                                                                    <option value="English learning">English learning
                                                                    </option>
                                                                    <option value="Self-help">Self-help</option>
                                                                    <option value="Business">Business</option>
                                                                    <option value="Short stories">Short stories</option>
                                                                    <option value="Long story">Long story</option>
                                                                    <option value="Information Technology">Information
                                                                        Technology</option>
                                                                    <option value="Manga">Manga</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <div class="form-group">
                                                                <label class="control-label">Category 02</label>
                                                                <select class="form-control select2" name="category_02">
                                                                    <option value="None" selected="selected">None
                                                                    </option>
                                                                    <option value="English learning">English learning
                                                                    </option>
                                                                    <option value="Self-help">Self-help</option>
                                                                    <option value="Business">Business</option>
                                                                    <option value="Short stories">Short stories</option>
                                                                    <option value="Long story">Long story</option>
                                                                    <option value="Information Technology">Information
                                                                        Technology</option>
                                                                    <option value="Manga">Manga</option>
                                                                </select>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <div class="form-group">
                                                                <label for="page-num">Number of pages <span
                                                                        class="text-danger">*</span></label>
                                                                <input id="page-num" name="page_num" type="number"
                                                                    class="form-control" placeholder="1000, 200, ..."
                                                                    required>
                                                            </div>
                                                        </div>
                                                        <div class="col-lg-3">
                                                            <div class="form-group">
                                                                <label for="language">Language <span
                                                                        class="text-danger">*</span></label>
                                                                <input id="language" name="language" type="text"
                                                                    class="form-control"
                                                                    placeholder="English, vietnamese" required>
                                                            </div>
                                                        </div>

                                                    </div>
                                                    <div class="form-group">
                                                        <label for="productDesc">Product Description
                                                            <span class="text-danger">*</span></label>
                                                        <textarea class="form-control" id="productDesc"
                                                            name="productDesc" rows="5"
                                                            placeholder="Write some description for the book..."
                                                            required></textarea>
                                                    </div>
                                                </div>
                                                <div class="tab-pane mt-4" id="product-img">

                                                    <h4 class="card-title">Product Images <span
                                                            class="text-danger">*</span></h4>
                                                    <p class="text-danger">Each product has a fixed number of photos of
                                                        4. Please up load all 4 photos</p>
                                                    <div class="product-color d-flex flex-wrap justify-content-between">
                                                        <div
                                                            class="d-flex flex-column align-items-center justify-content-center">
                                                            <span>
                                                                <a>
                                                                    <div class="product-color-item ">
                                                                        <img id="img_01"
                                                                            src="/images/products_images/00.jpg"
                                                                            width="200px" alt="">
                                                                    </div>
                                                                </a>
                                                            </span>
                                                            <div class="d-flex justify-content-center">
                                                                <label class="custom-upload-btn waves-effect"
                                                                    for="formFileSm1">
                                                                    Select image 01
                                                                    <input id="formFileSm1" type="file" name="img_1"
                                                                        hidden required />
                                                                </label>
                                                            </div>
                                                        </div>
                                                        <div
                                                            class="d-flex flex-column align-items-center justify-content-center">
                                                            <span>
                                                                <a>
                                                                    <div class="product-color-item ">
                                                                        <img id="img_02"
                                                                            src="/images/products_images/00.jpg"
                                                                            width="200px" alt="">
                                                                    </div>
                                                                </a>
                                                            </span>
                                                            <div class="d-flex justify-content-center">
                                                                <label class="custom-upload-btn waves-effect"
                                                                    for="formFileSm2">
                                                                    Select image 02
                                                                    <input id="formFileSm2" type="file" name="img_2"
                                                                        hidden required />
                                                                </label>
                                                            </div>
                                                        </div>
                                                        <div
                                                            class="d-flex flex-column align-items-center justify-content-center">
                                                            <span>
                                                                <a>
                                                                    <div class="product-color-item ">
                                                                        <img id="img_03"
                                                                            src="/images/products_images/00.jpg"
                                                                            width="200px" alt="">
                                                                    </div>
                                                                </a>
                                                            </span>
                                                            <div class="d-flex justify-content-center">
                                                                <label class="custom-upload-btn waves-effect"
                                                                    for="formFileSm3">
                                                                    Select image 03
                                                                    <input id="formFileSm3" type="file" name="img_3"
                                                                        hidden required />
                                                                </label>
                                                            </div>
                                                        </div>
                                                        <div
                                                            class="d-flex flex-column align-items-center justify-content-center">
                                                            <span>
                                                                <a>
                                                                    <div class="product-color-item ">
                                                                        <img id="img_04"
                                                                            src="/images/products_images/00.jpg"
                                                                            width="200px" alt="">
                                                                    </div>
                                                                </a>
                                                            </span>
                                                            <div class="d-flex justify-content-center">
                                                                <label class="custom-upload-btn waves-effect"
                                                                    for="formFileSm4">
                                                                    Select image 04
                                                                    <input id="formFileSm4" type="file" name="img_4"
                                                                        hidden required />
                                                                </label>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="d-flex justify-content-center mt-5">
                                                    <button type="submit"
                                                        class="btn btn-primary mr-2 waves-effect waves-light">
                                                        Add book</button>

                                                    <a class="btn btn-secondary waves-effect"
                                                        href="/products/product-list">Cancel</a>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end row -->

                    </div> <!-- container-fluid -->
                </div>
                <!-- End Page-content -->


                <footer class="footer">
                    <div class="container-fluid">
                        <div class="row">
                            <div class="col-sm-6">
                                <script>document.write(new Date().getFullYear())</script> © Nazox.
                            </div>
                            <div class="col-sm-6">
                                <div class="text-sm-right d-none d-sm-block">
                                    Crafted with <i class="mdi mdi-heart text-danger"></i> by Themesdesign
                                </div>
                            </div>
                        </div>
                    </div>
                </footer>
            </div>
            <!-- end main content-->

        </div>
        <!-- END layout-wrapper -->
</body>
<script type="text/javascript" src="/js/custom_js/product-edit.js"></script>